<!DOCTYPE HTML>
<html>
<head>
	<title>Murat Bircan Blog</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link href='//fonts.googleapis.com/css?family=Monda' rel='stylesheet' type='text/css'>
	<link href='//fonts.googleapis.com/css?family=Audiowide' rel='stylesheet' type='text/css'>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	@RenderSection("share",false)
	<style>
		#profile {
			height: 50px;
			width: 50px;
			border: 2px solid black;
			border-radius: 20px;
		}
	</style>
	@Styles.Render("~/bundles/styles")
</head>
<body>
	@{
		Html.RenderAction("HeaderPartialViewResult", "Home");
	}
	<!--------------------- Main Content ------------------->
	<div class="wrap">
		<div class="main">
			<div class="content">				
				@RenderBody()
			</div>
			<div class="sidebar">
				<div class="popular-post">
					<h3>Popüler Makaleler</h3>
					@foreach (var item in ViewBag.popular)
						{
					<div class="post-grid">
						<img src="~/images/pop.png" title="@item.Header" alt="" />						
						<p>@item.Header<a href="@Url.Action("Index", "Article", new {id = item.ArticleId})">[...]</a></p>
						<div class="clear"> </div>
					</div>
						}
					<div class="view-all">
						<a href="#">
						</a><a href="#">Tümünü Gör</a>
					</div>
					<div class="clear"></div>
				</div>
				<div class="clear"></div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
	<!--------------------- End Main Content ----------------------------------->
	@{
		Html.RenderAction("EndMainContentPartialViewResult", "Home");
	}

	<script src="http://localhost:63256/Scripts/jquery-3.3.1.min.js"></script>
	<script src="http://localhost:63256/Scripts/bootstrap.min.js"></script>
	<script src="http://localhost:63256/Scripts/jquery.swipebox.min.js"></script>
	<script src="http://localhost:63256/Scripts/app.js"></script>
	<script src="http://localhost:63256/Scripts/modernizr-2.6.2.js"></script>
	<script src="http://localhost:63256/Scripts/modernizr.custom.69142.js"></script>
	@Scripts.Render("~/bundles/js")
</body>
</html>


