<!DOCTYPE HTML>
<html>
<head>
	<title>Murat Bircan Blog</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link href='//fonts.googleapis.com/css?family=Monda' rel='stylesheet' type='text/css'>
	<link href='//fonts.googleapis.com/css?family=Audiowide' rel='stylesheet' type='text/css'>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	@RenderSection("share", false)
	@Styles.Render("~/bundles/styles")
</head>
<body>
	@{
		Html.RenderAction("HeaderPartialViewResult", "Home");
	}
	<!--------------------- Main Content ------------------->
	<div class="wrap">
		<div class="main">
			<div class="content">
				@RenderBody()
			</div>
			<div class="sidebar">
				<div class="popular-post">
					<h3>Popüler Makaleler</h3>
					@if (ViewBag.popular != null)
					{
						foreach (var item in ViewBag.popular)
						{
							<div class="post-grid">
								<img src="~/images/pop.png" title="@item.Header" alt="" />
								<i class="fa fa-arrow-right"></i><a class="popar" href="@Url.Action("Index", "Article", new {id = item.ArticleId})"><b>@item.Header</b></a>
								<p>@item.Content<a class="popar" href="@Url.Action("Index", "Article", new {id=item.ArticleId,route=item.Header.Replace(' ','-')})">[...]</a></p>
								<div class="clear"> </div>
							</div>
						}
					}
					<div class="view-all">
						<a href="#">
						</a><a href="#">Tümünü Gör</a>
					</div>
					<div class="clear"></div>
				</div>
				<div class="clear"></div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
	<!--------------------- End Main Content ----------------------------------->
	@{
		Html.RenderAction("EndMainContentPartialViewResult", "Home");
	}
	@Scripts.Render("~/bundles/js")
	@RenderSection("script", false)
</body>
</html>


