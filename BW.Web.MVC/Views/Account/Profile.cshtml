
@model BW.Models.ViewModels.ProfilePasswordMultiViewModel
@{
	Layout = "~/Views/Shared/_MainLayout.cshtml";
	ViewBag.Title = $"{Model.ProfileViewModel.Name} {Model.ProfileViewModel.Surname} Profil Sayfası";
}<div class="row">
	<div class="span3 well">
		<div class="row">
			<div class="span1">
				<a href="" class="thumbnail">
					<img src="@Model.ProfileViewModel.PhotoURL" alt="">
				</a>
			</div>
			<div class="span3" id="profilehud">
				<p id="username">@Model.ProfileViewModel.Name @Model.ProfileViewModel.Surname</p>
				<p id="registerdate">
					<small>Üyelik Tarihi @Model.ProfileViewModel.RegisterDate</small>
				</p>
				<p>
					<span>Biyografi :</span><br/>
					@Model.ProfileViewModel.Bio
				</p>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<span class="text-danger">@Html.ValidationSummary()</span>
		@using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @class = "form-horizontal" ,enctype = "multipart/form-data" }))
		{
		@Html.AntiForgeryToken()
			<div class="form-group">
				@Html.LabelFor(x=>x.ProfileViewModel.Photo, new {@class="col-sm-2 control-label"})
				<div class="col-sm-10">
					@Html.TextBoxFor(x=>x.ProfileViewModel.Photo,new {@class="form-control",type="file",multiple="false"})
				</div>
			</div>
		<div class="form-group">
			@Html.LabelFor(x => x.ProfileViewModel.Name, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-10">
				@Html.TextBoxFor(x => x.ProfileViewModel.Name, new { @class = "form-control", placeholder = "Ad" })
				<span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.Name)</span>
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.ProfileViewModel.Surname, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-10">
				@Html.TextBoxFor(x => x.ProfileViewModel.Surname, new { @class = "form-control", placeholder = "Soyad" })
				<span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.Surname)</span>
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.ProfileViewModel.UserName, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-10">
				@Html.TextBoxFor(x => x.ProfileViewModel.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı", @readonly = "true" })
				<span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.UserName)</span>
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.ProfileViewModel.Bio, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-10">
				@Html.TextAreaFor(x => x.ProfileViewModel.Bio, new { @class = "form-control", placeholder = "Biyografi" ,value=@Model.ProfileViewModel.Bio})
				<span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.Surname)</span>
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.ProfileViewModel.Email, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-10">
				@Html.TextBoxFor(x => x.ProfileViewModel.Email, new { @class = "form-control", placeholder = "E-mail", type = "email" })
				<span class="text-danger">@Html.ValidationMessageFor(x => x.ProfileViewModel.Email)</span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-info">Profili Güncelle</button>
			</div>
		</div>
}
	</div>
	<div class="col-md-6">
		<span class="text-danger">@Html.ValidationSummary()</span>
		@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()
			<div class="form-group">
				@Html.LabelFor(x => x.ChangePasswordViewModel.OldPassword, new { @class = "col-sm-2 control-label" })
				<div class="col-sm-10">
					@Html.TextBoxFor(x => x.ChangePasswordViewModel.OldPassword, new { @class = "form-control", placeholder = "Eski Şifre" })
					<span class="text-danger">@Html.ValidationMessageFor(x => x.ChangePasswordViewModel.OldPassword)</span>
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.ChangePasswordViewModel.Password, new { @class = "col-sm-2 control-label" })
				<div class="col-sm-10">
					@Html.TextBoxFor(x => x.ChangePasswordViewModel.Password, new { @class = "form-control", placeholder = "Şifre" })
					<span class="text-danger">@Html.ValidationMessageFor(x => x.ChangePasswordViewModel.Password)</span>
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.ChangePasswordViewModel.ConfirmPassword, new { @class = "col-sm-2 control-label" })
				<div class="col-sm-10">
					@Html.TextBoxFor(x => x.ChangePasswordViewModel.ConfirmPassword, new { @class = "form-control", placeholder = "Şİfre Tekrar" })
					<span class="text-danger">@Html.ValidationMessageFor(x => x.ChangePasswordViewModel.ConfirmPassword)</span>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-info">Şifre Güncelle</button>
				</div>
			</div>
		}
	</div>
</div>




