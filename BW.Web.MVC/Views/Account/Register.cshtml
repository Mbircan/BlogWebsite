@model BW.Models.ViewModels.RegisterViewModel
	@{
		ViewBag.Title = "Register";
		Layout = "~/Views/Shared/_Layout.cshtml";
	}
	<!------ Include the above in your HEAD tag ---------->
				<div class="panel panel-login">
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<span class="text-danger">@Html.ValidationSummary()</span>
								@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal"}))
		{
						@Html.AntiForgeryToken()
						<div class="form-group">
							@Html.LabelFor(x => x.Name, new { @class = "col-sm-4 control-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ad" })
								<span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(x => x.Surname, new { @class = "col-sm-4 control-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "Soyad" })
								<span class="text-danger">@Html.ValidationMessageFor(x => x.Surname)</span>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(x => x.UserName, new { @class = "col-sm-4 control-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
								<span class="text-danger">@Html.ValidationMessageFor(x => x.UserName)</span>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(x => x.Email, new { @class = "col-sm-4 control-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-mail", type = "email" })
								<span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(x => x.Password, new { @class = "col-sm-4 control-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
								<span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
							</div>
						</div>
						<div class="form-group">
							@Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-sm-4 control-label" })
							<div class="col-sm-8">
								@Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password" })
								<span class="text-danger">@Html.ValidationMessageFor(x => x.ConfirmPassword)</span>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-8 text-center">
								<button type="submit" class="btn btn-info">Kayıt Ol</button>
								<a href="@Url.Action("Login","Account")" class="btn btn-primary">Giriş Yap</a>
							</div>
						</div>
}
							</div>
						</div>
					</div>
				</div>
