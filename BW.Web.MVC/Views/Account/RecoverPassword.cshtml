@model BW.Models.ViewModels.RecoverPasswordViewModel
@{
Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Şifremi Unuttum";
}

<h2>Şifre Sıfırlama</h2>
<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<span class="text-danger">@Html.ValidationSummary()</span>
		@using (Html.BeginForm("RecoverPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()
			<div class="form-group">
				@Html.LabelFor(x => x.Username, new { @class = "col-sm-2 control-label" })
				<div class="col-sm-10">
					@Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
					<span class="text-danger">@Html.ValidationMessageFor(x => x.Username)</span>
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.Email, new { @class = "col-sm-2 control-label" })
				<div class="col-sm-10">
					@Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-mail" })
					<span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span>
				</div>
			</div>       
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-info">Gönder</button>
				</div>
			</div>
		}
	</div>
</div>




