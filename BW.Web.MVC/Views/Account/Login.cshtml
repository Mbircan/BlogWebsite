@model BW.Models.ViewModels.LoginViewModel
@{
	Layout = null;
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container" id="mydiv">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-login">
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <span class="text-danger">@Html.ValidationSummary()</span>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" ,id="login-form"}))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.Username, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Username)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.RememberMe, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.CheckBoxFor(x => x.RememberMe, new { @class = "checkbox-inline" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.RememberMe)</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-6 text-center">
                    <button type="submit" class="btn btn-success">Giriş</button>
                    <a class="btn btn-info" href="@Url.Action("Register","Account")">Kayıt Ol</a>
                    <a href="@Url.Action("RecoverPassword","Account")">Şifremi Unuttum</a>
                </div>
            </div>
        }
    </div>
</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section style
{
	<style>
		#mydiv {
			position: fixed;
			top: 50%;
			left: 50%;
			width: 30em;
			height: 18em;
			margin-top: -9em; /*set to a negative number 1/2 of your height*/
			margin-left: -15em; /*set to a negative number 1/2 of your width*/
			border: 1px solid #ccc;
			background-color: #f3f3f3;
		}

	</style>
}